<configuration>
  <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%level] %logger{36}: %msg%n</pattern>
    </encoder>
    <target>System.err</target>
  </appender>

  <logger name="lepo" level="DEBUG" />

  <root level="ERROR">
    <appender-ref ref="STDERR" />
  </root>
</configuration>